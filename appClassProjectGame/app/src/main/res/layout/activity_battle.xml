<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="imgc0312.appclassprojectgame.Battle">


    <GridLayout
        android:layout_width="540dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:columnCount="6"
        android:orientation="horizontal"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <!-- ROW0-->
        <Button
            android:id="@+id/MenuButton"
            android:layout_width="90dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Menu" />

        <TextView
            android:layout_width="180dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="0"
            android:gravity="center"
            android:text="www" />

        <TextView
            android:layout_width="180dp"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="0"
            android:gravity="center"
            android:text="www" />

        <Button
            android:id="@+id/SetButton"
            android:layout_width="90dp"
            android:layout_column="5"
            android:text="Set" />

        <!-- ROW1-->
        <ImageView
            android:id="@+id/imagePlayer"
            android:layout_width="180dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/holo_purple" />

        <TextView
            android:id="@+id/declareView"
            android:layout_width="180dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"
            android:gravity="center"
            android:text="declareView" />

        <ImageView
            android:id="@+id/imageEnemy"
            android:layout_width="180dp"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/holo_purple" />

        <!-- ROW2 -->
        <TextView
            android:id="@+id/namePlayer"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:gravity="center"
            android:text="&lt;Player&gt;" />

        <TextView
            android:id="@+id/nameAccident"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:gravity="center"
            android:text="&lt;Battle&gt;" />

        <TextView
            android:id="@+id/nameEnemy"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_row="2"
            android:gravity="center"
            android:text="&lt;Enemy&gt;" />


        <!-- ROW3 -->
        <TextView
            android:id="@+id/infoPlayer"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:gravity="center_vertical|left"
            android:text="[infoPlayer]" />

        <ScrollView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="3">

            <LinearLayout
                android:id="@+id/battleScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-- In the Battle!! --" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/infoEnemy"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:gravity="center_vertical|left"
            android:text="[infoEnemy]" />
        <!-- ROW4 -->
        <Button
            android:id="@+id/skillBt1"
            android:layout_width="180dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:text="&lt;SKILL 1&gt;" />

        <Button
            android:id="@+id/skillBt2"
            android:layout_width="180dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:gravity="center"
            android:text="&lt;SKILL 2&gt;" />

        <Button
            android:id="@+id/skillBt3"
            android:layout_width="180dp"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:text="&lt;SKILL 3&gt;" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>