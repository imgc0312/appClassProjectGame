<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="imgc0312.appclassprojectgame.Battle">


    <GridLayout
        android:layout_width="540dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:rowCount="5"
        android:columnCount="6"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1">
        <!-- ROW0-->
        <Button
            android:id="@+id/MenuButton"
            android:text="Menu"
            android:layout_width="90dp"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:layout_gravity="fill_vertical"
            android:layout_width="180dp"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:gravity="center"
            android:text="www" />

        <TextView
            android:layout_gravity="fill_vertical"
            android:layout_width="180dp"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:gravity="center"
            android:text="www" />

        <Button
            android:id="@+id/SetButton"
            android:text="Set"
            android:layout_width="90dp"
            android:layout_column="5"
             />

        <!-- ROW1-->
        <ImageView
            android:id="@+id/imagePlayer"
            app:srcCompat="@android:color/holo_purple"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/declareView"
            android:text="declareView"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"/>

        <ImageView
            android:id="@+id/imageEnemy"
            app:srcCompat="@android:color/holo_purple"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="4"
            android:layout_gravity="fill_vertical"
            android:layout_row="1"
            android:scaleType="fitCenter"/>

        <!-- ROW2 -->
        <TextView
            android:id="@+id/namePlayer"
            android:text="&lt;Player&gt;"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_height="20dp"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/nameAccident"
            android:text="&lt;Battle&gt;"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="2"
            android:layout_height="20dp"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/nameEnemy"
            android:text="&lt;Enemy&gt;"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="4"
            android:layout_height="20dp"
            android:layout_row="2"/>


        <!-- ROW3 -->
        <TextView
            android:id="@+id/infoPlayer"
            android:text="[infoPlayer]"
            android:gravity="center_vertical|left"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_height="120dp"
            android:layout_row="3"/>

        <ScrollView
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_height="120dp">

            <LinearLayout
                android:id="@+id/battleScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-- In the Battle!! --" />
            </LinearLayout>
         </ScrollView>

        <TextView
            android:id="@+id/infoEnemy"
            android:text="[infoEnemy]"
            android:gravity="center_vertical|left"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="4"
            android:layout_height="120dp"
            android:layout_row="3"/>
        <!-- ROW4 -->
        <Button
            android:id="@+id/skillBt1"
            android:text="&lt;SKILL 1&gt;"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="0"
            android:layout_row="4"/>

        <Button
            android:id="@+id/skillBt2"
            android:text="&lt;SKILL 2&gt;"
            android:gravity="center"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="2"
            android:layout_row="4"/>

        <Button
            android:id="@+id/skillBt3"
            android:text="&lt;SKILL 3&gt;"
            android:layout_width="180dp"
            android:layout_columnSpan="2"
            android:layout_column="4"
            android:layout_row="4"/>
    </GridLayout>






</android.support.constraint.ConstraintLayout>